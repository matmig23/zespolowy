{% extends 'base.html.twig' %}

{% block body %}
   <h2 class="page-header"> Przydzielone zadania</h2>
   <table class="table table-striped">
      <thead>
      <tr>
         <th scope="col">#</th>
         <th scope="col">Zadanie</th>
         <th scope="col">Data wykonania</th>
      </tr>
      </thead>
      <tbody>

      {% for todo in todo %}

      <tr>
         <th scope="row">{{ todo.id }}</th>
         <td>{{ todo.name }}</td>
         <td>{{ todo.dueDate|date('F j, Y, g:i a')}}</td>
         <td>
            <a href="/todo/details/{{ todo.id }}" class="tn btn-success">Details</a>
            <a href="/todo/edit/{{ todo.id }}" class="tn btn-default">Edit</a>
            <a href="/todo/delete/{{ todo.id }}" class="tn btn-danger">Delete</a>
         </td>
      </tr>
      {%  endfor  %}

      </tbody>
   </table>

{% endblock %}
